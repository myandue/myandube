extends base

block contents 
    form(method="POST")
        input(name="title" value=video.title type="text" placeholder="title" required minlength=1)
        input(name="description" value=video.description type="text" placeholder="description" required minlength=1)
        input(name="hashtags" value=video.hashtags.join() type="text" placeholder="hashtags, use comma" required minlength=1)
        input(type="submit" value="Save")